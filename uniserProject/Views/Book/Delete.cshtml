
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Book

<div>
    <h4>Are you sure you want to delete this book?</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <dt>Code</dt>
        <dd>@Html.DisplayFor(model => model.Code)</dd>
    </dl>

    @using (Html.BeginForm("Delete", "Book", new { id = Model.Id }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="submit" value="Delete" class="btn btn-danger" />
        <a href="@Url.Action( "Index","Book")" class="btn btn-info">cancel</a>
    }
</div>

