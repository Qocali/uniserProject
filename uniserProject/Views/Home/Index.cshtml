@model List<Product>
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Bizim Mehsullar</h2>
                            <img src="img/logo.jpg" alt="title">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <h2>Mehsullarmizla tanis olun</h2>
                    <a asp-controller="Home" asp-action="Create" class="btn btn-success">yeni mehsul elave edin</a>
                </div>
            </div>
        </div>

        <div class="teacher-area pt-150 pb-105">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="course-title">
                            <h3>istediyniz mehsulu axtarin</h3>
                        </div>
                       <div class="form-group ">
        <select class="form-control" name="CatId">
            @foreach ( Category item in ViewBag.Catigories)
            {
                <option value="@item.Id">@item.Name</option>
            }

        </select>

    </div>
                        <div class="course-form">
                            <form>
                                <input id="productsearch" type="text" placeholder="Search..." />
                            </form>
                        </div>
                    </div>
                </div>
                <div class="row" id="MyProducts">
                    @foreach (Product product in Model)
                    {
                        <div class="col-md-3 col-sm-4 col-xs-12">
                            <div class="single-teacher mb-45">
                                <div class="single-teacher-img">
                                    <a asp-route-id="@product.Id" asp-controller="Home" asp-action="Detail"><img src="~/img/product/@product.Image" alt="teacher" style="width: 360px !important;height: 250px !important; "></a>
                                </div>
                                <div class="single-teacher-content text-center">
                                    <h2><a href="#">@product.Name</a></h2>
                                         <h2><a href="#">@product.Category.Name</a></h2>
                                    <h4>@product.SubName</h4>
                                    <ul>
                                            <li><a href="#"><i class="zmdi zmdi-facebook"></i></a></li>
                                            <li><a href="#"><i class="zmdi zmdi-pinterest"></i></a></li>
                                            <li><a href="#"><i class="zmdi zmdi-vimeo"></i></a></li>
                                            <li><a href="#"><i class="zmdi zmdi-twitter"></i></a></li>

                                    </ul>
                                </div>
                            </div>
                        </div>

                    }
                </div>
                <div class="row" id="pagination">
                    <div class="col-xs-12">
                        <div class="pagination">
                            <ul>
                                @for (int i = 1; i <= ViewBag.Pagecount; i++)
                                {
                                    if (ViewBag.Page == i)
                                    {
                                        <li style="z-index:3;color:#fff;background-color:#007bff;border-color:#007bff;" class="page-item active disabled">
                                            <a class="page-link">@i</a>
                                        </li>
                                    }

                                    else
                                    {
                                        <li class="page-item ">
                                            <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>

                                    }

                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<!-- Teacher End -->