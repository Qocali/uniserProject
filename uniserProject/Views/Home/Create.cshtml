
@model Product
<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="exampleInputEmail1">Photo</label>
        <input asp-for="@Model.Photo" class="form-control" aria-descriedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Photo"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input asp-for="@Model.Name" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">SubName</label>
        <input asp-for="@Model.SubName" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.SubName"></span>
    </div>

    <div class="form-group">
        <label for="exampleInputEmail1">Price</label>
        <input asp-for="@Model.ProductDetails.Price" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.ProductDetails.Price"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Count</label>
        <input asp-for="@Model.ProductDetails.Count" class="form-control" aria-describedby="emailHelp">
        <span class="text-danger" asp-validation-for="@Model.ProductDetails.Count"></span>
    </div>
    <div class="form-group ">
        <select class="form-control" name="CatId">
            @foreach ( Category item in ViewBag.Catigories)
            {
                <option value="@item.Id">@item.Name</option>
            }

        </select>

    </div>
   
    <button type="submit" class="btn btn-primary">Create</button>
    <button type="submit" class="btn btn-info" asp-action="Index">Go Back</button>
</form>
